# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=*  # change this

# Database (PostgreSQL + PostGIS)
DB_NAME=hadbetter
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Celery (RabbitMQ)
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//

# Redis (봇 상태 캐시)
REDIS_URL=redis://localhost:6379/0

# RabbitMQ (SSE Pub/Sub)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost

# External APIs
TMAP_API_KEY=your-tmap-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# 실시간 대중교통 위치 API (공공데이터포털/서울시 API)
BUS_API_KEY=your-bus-api-key
SUBWAY_API_KEY=your-subway-api-key

# Logging
DJANGO_LOG_LEVEL=INFO
