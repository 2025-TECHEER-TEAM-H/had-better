# EditorConfig - 모든 에디터에서 일관된 코딩 스타일 유지
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Python 파일
[*.py]
indent_size = 4
max_line_length = 88

# Markdown 파일
[*.md]
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab

# YAML 파일
[*.{yml,yaml}]
indent_size = 2

# JSON 파일
[*.json]
indent_size = 2

# TypeScript/JavaScript 파일
[*.{ts,tsx,js,jsx}]
indent_size = 2

# CSS/SCSS 파일
[*.{css,scss}]
indent_size = 2
