# Celery EC2 서버용 환경 변수
# 사용법: .env.celery 로 복사 후 값 채우기

# ECR 정보
ECR_REGISTRY=123456789012.dkr.ecr.ap-northeast-2.amazonaws.com
IMAGE_TAG=latest

# Django 설정
DJANGO_SECRET_KEY=your-secret-key-here

# Django EC2 Private IP (RabbitMQ 연결용)
DJANGO_EC2_PRIVATE_IP=10.0.1.100

# AWS RDS 정보 (Django EC2와 동일)
DB_HOST=hadbetter-db.xxxxxxxxxx.ap-northeast-2.rds.amazonaws.com
DB_PORT=5432
DB_NAME=hadbetter
DB_USER=postgres
DB_PASSWORD=your-db-password

# Redis (ElastiCache or EC2)
REDIS_URL=redis://your-redis-endpoint:6379/0

# RabbitMQ (Django EC2에 있음)
RABBITMQ_USER=admin
RABBITMQ_PASS=your-rabbitmq-password
