# Django EC2 서버용 환경 변수
# 사용법: .env.django 로 복사 후 값 채우기

# ECR 정보
ECR_REGISTRY=123456789012.dkr.ecr.ap-northeast-2.amazonaws.com
IMAGE_TAG=latest

# Django 설정
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=api.hadbetter.cloud,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://hadbetter.cloud,https://www.hadbetter.cloud

# AWS RDS 정보
DB_HOST=hadbetter-db.xxxxxxxxxx.ap-northeast-2.rds.amazonaws.com
DB_PORT=5432
DB_NAME=hadbetter
DB_USER=postgres
DB_PASSWORD=your-db-password

# Redis (Docker 컨테이너)
REDIS_URL=redis://hadbetter-redis:6379/0

# RabbitMQ (Docker 컨테이너)
RABBITMQ_HOST=hadbetter-rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASS=your-rabbitmq-password
RABBITMQ_PASSWORD=your-rabbitmq-password
CELERY_BROKER_URL=amqp://admin:your-rabbitmq-password@hadbetter-rabbitmq:5672//

# External APIs
TMAP_API_KEY=your-tmap-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-token
BUS_API_KEY=your-bus-api-key
SUBWAY_API_KEY=your-subway-api-key

# Logging
DJANGO_LOG_LEVEL=INFO
